<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Train</th>
      <th>Route</th>
      <th>Trip date</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.train %></td>
        <td><%= trip.route %></td>
        <td><%= trip.trip_date %></td>
        <td><%= trip.cost %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
