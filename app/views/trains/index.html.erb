<h1>Listing trains</h1>

<table class="table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Max speed</th>
      <th>No of seats</th>
      <th>No of toilets</th>
      <th>Reclining seats</th>
      <th>Folding tables</th>
      <th>Disability access</th>
      <th>Luggage storage</th>
      <th>Vending machines</th>
      <th>Food service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.model %></td>
        <td><%= train.max_speed %></td>
        <td><%= train.no_of_seats %></td>
        <td><%= train.no_of_toilets %></td>
        <td><%= train.reclining_seats %></td>
        <td><%= train.folding_tables %></td>
        <td><%= train.disability_access %></td>
        <td><%= train.luggage_storage %></td>
        <td><%= train.vending_machines %></td>
        <td><%= train.food_service %></td>
        <td><%= link_to 'Show', train %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Train', new_train_path %>
