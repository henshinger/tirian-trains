<h1>Listing maintenances</h1>

<table class="table"> 
  <thead>
    <tr>
      <th>Train</th>
      <th>Crew</th>
      <th>Maintenance date</th>
      <th>Maintenance time</th>
      <th>Task</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= maintenance.train %></td>
        <td><%= maintenance.crew %></td>
        <td><%= maintenance.maintenance_date %></td>
        <td><%= maintenance.maintenance_time %></td>
        <td><%= maintenance.task %></td>
        <td><%= maintenance.condition %></td>
        <td><%= link_to 'Show', maintenance %></td>
        <td><%= link_to 'Edit', edit_maintenance_path(maintenance) %></td>
        <td><%= link_to 'Destroy', maintenance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

