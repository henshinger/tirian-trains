<%= form_for(@customer, html: {class: "form-horizontal"}) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :given_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :given_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :middle_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :middle_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :gender, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, class: "col-sm-2 control-label" %><br>
    <div class="col-sm-10">
      <div class="col-sm-4">
        <%= f.date_select :birthdate, {:start_year => 1900, :end_year => 2015, date_separator: "</div><div class='col-sm-4'>"}, {class: "form-control"} %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
